# This is the config file, and
# a '#' or ';' character indicates
# a comment
#

[user]
	name = Sitri Kamishirasawa
	email = wc348nka@gmail.com
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	longpaths = true
	editor = vim
[init]
[alias]
	logg = log --graph
	log1 = log --oneline
	logg1 = log --graph --oneline
	pullupstream = pull upstream main
	subpull = submodule foreach git pull origin master

[pull]
	ff = true
[push]
	followTags = true
	default = current

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[diff "lockb"]
	textconv = bun
	binary = true
[ghq]
	root = ~/repos

