# This is the config file, and
# a '#' or ';' character indicates
# a comment
#

[user]
	name = Sitri Kamishirasawa
	email = wc348nka@gmail.com
	signingkey = ~/.ssh/id_ed25519.pub
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	longpaths = true
	editor = vim
	ignorecase = false
	# `ctrl + c` on zsh main thread, it kills fsm-daemon.
	fsmonitor = false
	untrackedCache = true
[init]
[alias]
	logg = log --graph
	log1 = log --oneline
	logg1 = log --graph --oneline
	pullupstream = pull upstream main
	sw = "!f() { git switch \"$1\" 2>/dev/null || git switch -c \"$1\"; }; f"
	st = status --ignore-submodules=all
	# better git branch
	# https://gist.github.com/schacon/e9e743dee2e92db9a464619b99e94eff?permalink_comment_id=5331647
	bb = for-each-ref --color --sort=-committerdate --format='%(HEAD) %(align:25,left)%(refname:short)%(end) %(align:30,left)%(upstream:trackshort)%(color:blue)%(upstream:short)%(color:reset)%(upstream:track)%(end) %(align:30,left)%(push:trackshort)%(color:blue)%(push:short)%(color:reset)%(push:track)%(end)' refs/heads/

# Commit Sign
[gpg]
	format = ssh
[commit]
	gpgsign = true
[log]
	showSignature = true

# UI
## nothing

# Conflict Resolution
[rerere]
	enable = true

# Remotes
## fetch
[fetch]
	all = true
	writeCommitGraph = true
	parallel = 10
[merge]
	ff = false
[pull]
	ff = true
## push
[remote]
	pushDefault = origin
[push]
	default = current
	autoSetupRemote = true
	followTags = true

# Extensions
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[diff "lockb"]
	textconv = bun
	binary = true
[ghq]
	root = ~/repos
