# ls family
alias ls='ls --color=auto'
alias la='ls -A'
alias ll='ls -l'
alias lla='ls -Al'

# shorthands
alias zshrc='$EDITOR ~/.zshrc'
alias t='tail -f'
alias zplugclean='zplug clear && zplug clean'

# default options
alias grep='grep --color'

# overrides
alias cd='pushd'
alias bd='popd'
alias stack='dirs'
